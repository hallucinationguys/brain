---
import type { HTMLAttributes } from 'astro/types';
import { getLangFromUrl } from '@/i18n/utils';

type Props = HTMLAttributes<'a'> & {
  href?: string | URL;
};

const { 
  href = '', 
  class: className, 
  ...props 
} = Astro.props;

const lang = getLangFromUrl(Astro.url);

// Convert href to string and handle different input types
const hrefString = href instanceof URL 
  ? href.toString() 
  : String(href);

// Prepend language for internal links
const fullHref = hrefString.startsWith('/') 
  ? `/${lang}${hrefString}` 
  : hrefString;

---

<a 
  href={fullHref} 
  class:list={[className, "hover:text-pink-600"]} 
  {...props}
>
  <slot />
</a>
