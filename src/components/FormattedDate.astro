---
import { getLangFromUrl } from '@/i18n/utils';

interface Props {
	date: Date;
}

const { date } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<time 
  datetime={date.toISOString()} 
  class="text-gray-600 dark:text-gray-400 text-sm"
>
  {
    date.toLocaleDateString(lang, {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
      timeZone: 'UTC'
    })
  }
</time>
