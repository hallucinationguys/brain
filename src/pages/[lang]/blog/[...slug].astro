---
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';
import Base from '../../../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => {
    const [lang, ...slug] = post.slug.split('/');
    return {
      params: {
        lang,
        slug: slug.join('/') || undefined,
      },
      props: post,
    };
  });
}

const { lang, slug } = Astro.params;
const post = Astro.props;
const t = useTranslations(lang as 'en' | 'vi');

// Format the date according to the current language
const formattedDate = post.data.pubDate.toLocaleDateString(lang, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const { Content } = await post.render();
---

<Base title={post.data.title} description={post.data.description}>
  <article>
    {post.data.heroImage && (
      <img 
        src={post.data.heroImage} 
        alt="" 
        class="hero-image"
      />
    )}
    
    <div class="prose">
      <header>
        <h1>{post.data.title}</h1>
        <time datetime={post.data.pubDate.toISOString()}>
          {formattedDate}
        </time>
      </header>

      <div class="content">
        <Content />
      </div>
    </div>
  </article>
</Base>

<style>
  article {
    margin: 0 auto;
    max-width: 65ch;
  }

  .hero-image {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
    margin: 0 0 2rem 0;
    border-radius: 0.5rem;
  }

  .prose {
    font-size: 1.125rem;
    line-height: 1.7;
  }

  header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  time {
    color: #666;
    font-size: 0.875rem;
  }

  .content {
    margin-top: 2rem;
  }

  .content :global(h2) {
    font-size: 1.875rem;
    margin: 2.5rem 0 1.5rem 0;
  }

  .content :global(h3) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem 0;
  }

  .content :global(p) {
    margin: 1.25rem 0;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #4b5563;
  }

  .content :global(pre) {
    background-color: #1f2937;
    color: #e5e7eb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(code) {
    font-family: ui-monospace, monospace;
    font-size: 0.875em;
  }

  .content :global(ul), .content :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.25rem;
  }

  .content :global(li) {
    margin: 0.5rem 0;
  }
</style>
